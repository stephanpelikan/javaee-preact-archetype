{
	"compilerOptions": {
		"outDir": "./public/",
		"baseUrl": ".",
		"target": "es5",
		"lib": ["es2016", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "h"
	},
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	],
	"exclude": [
		"typings/browser.d.ts",
		"typings/browser",
		"node_modules"
	]
}

{
	"compilerOptions": {
		"outDir": "./public/",
		"experimentalDecorators": true,
		"baseUrl": ".",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"module": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "React.createElement",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"react": [
				"node_modules/preact-compat/"
			],
			"react-dom": [
				"node_modules/preact-compat/"
			]
		}
	},
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
